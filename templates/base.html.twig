<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
	<head>
		<title>Kyélà</title>
		<meta name="viewport" content="width=device-width, initial-scale=0.8">
		<meta name="description" content="{% trans %}meta.description{% endtrans %}">
		<meta name="copyright" content="Arnaud Bienvenu">
		<meta name="application-name" content="Kyela">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
			integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			crossorigin="anonymous"></script>
		{% block javascripts %}
			{% block importmap %}{{ importmap('app') }}{% endblock %}
		{% endblock %}
		{% block robots %}
			<meta name="robots" content="noindex, nofollow">
		{% endblock %}
		<link rel="icon" href="{{ asset('img/favicon.ico') }}" type="image/x-icon">
		<link rel="icon" href="{{ asset('img/favicon.png') }}" type="image/png">
		<link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon.png') }}">
		<!-- Fonte Nunito -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap"
			rel="stylesheet">
		<!-- Développement Ouille! -->
		<link href="https://labo.ouille.eu/kyela/surcharge.css" rel="stylesheet" type="text/css">
		<link href="https://labo.ouille.eu/kyela/responsive.css" rel="stylesheet" type="text/css">
	</head>
	{% block rawbody %}{% endblock %}
</html>
