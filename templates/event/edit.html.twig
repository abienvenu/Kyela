{% extends 'layout.html.twig' %}

{% block body %}
	<div class="container mt-4">
		<div class="card shadow-lg bg-light p-4 position-relative mb-4 text-center">
			<h1>
				{% if event.name %}
					{{ 'event' | trans }} - {{ event.name }}
				{% else %}
					{{ 'new.event' | trans }}
				{% endif %}
			</h1>
		</div>

		<div class="card shadow-lg p-4 position-relative">
			{{ form_start(form) }}
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label fw-bold text-end">
					{{ form_label(form.name) }}
				</label>
				<div class="col-sm-10">
					{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.name) }}
				</div>
			</div>

			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label fw-bold text-end">
					{{ form_label(form.place) }}
				</label>
				<div class="col-sm-10">
					{{ form_widget(form.place, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.place) }}
				</div>
			</div>

			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label fw-bold text-end">
					{{ form_label(form.subtitle) }}
				</label>
				<div class="col-sm-10">
					{{ form_widget(form.subtitle, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.subtitle) }}
				</div>
			</div>

			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label fw-bold text-end">
					{{ form_label(form.date) }}
				</label>
				<div class="col-sm-10">
					{{ form_widget(form.date, {'attr': {'type': 'date', 'class': 'form-control'}}) }}
					{{ form_errors(form.date) }}
				</div>
			</div>

			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label fw-bold text-end">
					{{ form_label(form.time) }}
				</label>
				<div class="col-sm-10">
					{{ form_widget(form.time, {'attr': {'type': 'time', 'class': 'form-control'}}) }}
					{{ form_errors(form.time) }}
				</div>
			</div>


			<div class="mb-3 row">
				<div class="offset-sm-2 col-sm-10">
					<div class="row">
						<div class="col-md-8">
							<a role="button" class="btn btn-lg btn-secondary btn-gradient me-2"
								href="{{ path('app_event_list', {url: event.poll.url}) }}">
								<i class="bi bi-skip-backward me-2"></i>
								{{ 'back' | trans }}
							</a>
							<button type="submit" class="btn btn-lg btn-danger btn-gradient ms-2">
								<i class="bi bi-save me-2"></i>
								{{ 'save' | trans }}
							</button>
						</div>
						{% if event.id %}
							<div class="col-md-4 text-end mt-2 mt-md-0">
								<a role="button" class="btn btn-lg btn-dark ms-auto"
									href="{{ path('app_event_delete', {url: event.poll.url, id: event.id}) }}">
									<i class="bi bi-trash me-2"></i>
									{{ 'delete' | trans }}
								</a>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
