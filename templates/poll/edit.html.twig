{% extends 'layout.html.twig' %}

{% block body %}
	<div class="container mt-4">
		<div class="card shadow-lg bg-light p-4 position-relative mb-4 text-center">
			<h1>{{ 'poll' | trans }} - {{ poll.title }}</h1>
		</div>

		<div class="card shadow-lg p-4 position-relative">
		{{ form_start(pollForm) }}
		<div class="mb-3 row">
			<label class="col-sm-2 col-form-label fw-bold text-end">
				{{ form_label(pollForm.url) }}
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-10">
				{{ form_widget(pollForm.url, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(pollForm.url) }}
			</div>
		</div>

		<div class="mb-3 row">
			<label class="col-sm-2 col-form-label fw-bold text-end">
				{{ form_label(pollForm.title) }}
				<span class="text-danger">*</span>
			</label>
			<div class="col-sm-10">
				{{ form_widget(pollForm.title, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(pollForm.title) }}
			</div>
		</div>

		<div class="mb-3 row">
			<label class="col-sm-2 col-form-label fw-bold text-end">
				{{ form_label(pollForm.headLines) }}
			</label>
			<div class="col-sm-10">
				{{ form_widget(pollForm.headLines, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(pollForm.headLines) }}
			</div>
		</div>

		<div class="mb-3 row">
			<label class="col-sm-2 col-form-label fw-bold text-end">
				{{ form_label(pollForm.bottomLines) }}
			</label>
			<div class="col-sm-10">
				{{ form_widget(pollForm.bottomLines, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(pollForm.bottomLines) }}
			</div>
		</div>

		<div class="mb-3 row">
			<div class="offset-sm-2 col-sm-10">
				<button type="submit" class="btn btn-lg btn-danger btn-gradient">
					<i class="bi bi-save me-2"></i>
					{{ 'save' | trans }}
				</button>
			</div>
		</div>
		{{ form_end(pollForm) }}
	</div>
	</div>
{% endblock %}
