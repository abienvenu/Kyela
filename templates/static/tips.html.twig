{% extends 'layout.html.twig' %}

{% block robots %}
    <meta name="robots" content="index, follow">
{% endblock %}

{% block body -%}
    <div class="container py-5">
        <div class="text-center mb-4">
            <h1 class="display-4 fw-bold">{% trans %}tips.full{% endtrans %}</h1>
        </div>

        <div class="accordion" id="accordion">
            {% for question_answer in tips %}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading{{ loop.index }}">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ loop.index }}" aria-expanded="{% if loop.first %}true{% else %}false{% endif %}" aria-controls="collapse{{ loop.index }}">
                            <i class="bi bi-question-circle me-2"></i> <!-- Icône pour les questions -->
                            <strong>{{ question_answer.q }}</strong>
                        </button>
                    </h2>
                    <div id="collapse{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="heading{{ loop.index }}" data-bs-parent="#accordion">
                        <div class="accordion-body bg-light text-dark"> <!-- Fond clair pour les réponses -->
                            <i class="bi bi-chat-dots me-2"></i> <!-- Icône pour les réponses -->
                            <em>{{ question_answer.a }}</em> <!-- Italic pour les réponses -->
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
