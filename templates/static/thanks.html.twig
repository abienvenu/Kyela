{% extends 'layout.html.twig' %}

{% block robots %}
    <meta name="robots" content="index, follow">
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="text-center mb-4">
			<h1 class="display-4 fw-bold">{% trans %}thank_you.title{% endtrans %}</h1>
			<p>{% trans %}thank_you.description{% endtrans %}</p>
		</div>

		<div class="row justify-content-center thanks">
			<!-- Symfony -->
			<div class="col-md-4 mb-4 text-center">
				<div class="card shadow-lg border-light rounded">
					<img src="{{ asset('img/thanks/symfony.png') }}" class="card-img-top logo-img" alt="Symfony">
					<div class="card-body">
						<h5 class="card-title text-primary">Symfony</h5>
						<p class="card-text text-muted">{% trans %}thank_you.symfony{% endtrans %}</p>
						<a href="https://symfony.com" class="btn btn-primary btn-lg" target="_blank">
							<i class="bi bi-box-arrow-up-right me-2"></i> {% trans %}thank_you.visit_site{% endtrans %}
						</a>
					</div>
				</div>
			</div>

			<!-- PHP -->
			<div class="col-md-4 mb-4 text-center">
				<div class="card shadow-lg border-light rounded">
					<img src="{{ asset('img/thanks/php.png') }}" class="card-img-top logo-img" alt="PHP">
					<div class="card-body">
						<h5 class="card-title text-primary">PHP</h5>
						<p class="card-text text-muted">{% trans %}thank_you.php{% endtrans %}</p>
						<a href="https://www.php.net" class="btn btn-primary btn-lg" target="_blank">
							<i class="bi bi-box-arrow-up-right me-2"></i> {% trans %}thank_you.visit_site{% endtrans %}
						</a>
					</div>
				</div>
			</div>

			<!-- Docker -->
			<div class="col-md-4 mb-4 text-center">
				<div class="card shadow-lg border-light rounded">
					<img src="{{ asset('img/thanks/docker.png') }}" class="card-img-top logo-img" alt="Docker">
					<div class="card-body">
						<h5 class="card-title text-primary">Docker</h5>
						<p class="card-text text-muted">{% trans %}thank_you.docker{% endtrans %}</p>
						<a href="https://www.docker.com" class="btn btn-primary btn-lg" target="_blank">
							<i class="bi bi-box-arrow-up-right me-2"></i> {% trans %}thank_you.visit_site{% endtrans %}
						</a>
					</div>
				</div>
			</div>

			<!-- Bootstrap -->
			<div class="col-md-4 mb-4 text-center">
				<div class="card shadow-lg border-light rounded">
					<img src="{{ asset('img/thanks/bootstrap.png') }}" class="card-img-top logo-img" alt="Bootstrap">
					<div class="card-body">
						<h5 class="card-title text-primary">Bootstrap 5</h5>
						<p class="card-text text-muted">{% trans %}thank_you.bootstrap{% endtrans %}</p>
						<a href="https://getbootstrap.com" class="btn btn-primary btn-lg" target="_blank">
							<i class="bi bi-box-arrow-up-right me-2"></i> {% trans %}thank_you.visit_site{% endtrans %}
						</a>
					</div>
				</div>
			</div>

			<!-- Ouille! -->
			<div class="col-md-4 mb-4 text-center">
				<div class="card shadow-lg border-light rounded">
					<img src="{{ asset('img/thanks/ouille.png') }}" class="card-img-top logo-img" alt="Ouille!">
					<div class="card-body">
						<h5 class="card-title text-primary">Ouille&nbsp;!</h5>
						<p class="card-text text-muted">{% trans %}thank_you.ouille{% endtrans %}</p>
						<a href="https://www.ouille.eu" class="btn btn-primary btn-lg" target="_blank">
							<i class="bi bi-box-arrow-up-right me-2"></i> {% trans %}thank_you.visit_site{% endtrans %}
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="row justify-content-center mt-5">
			<div class="col-md-8 text-center">
				<h3 class="display-4 text-success">{% trans %}thank_you.contributors_title{% endtrans %}</h3>
				<p class="text-muted">{% trans %}thank_you.contributors_message{% endtrans %}</p>
				<p class="text-muted">{% trans %}thank_you.developers_acknowledgment{% endtrans %}</p>
			</div>
		</div>
	</div>
{% endblock %}
